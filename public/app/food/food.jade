.container
    table.table.table-striped.table-hover
        thead
            th Title
            th Description
            th Price
            th Currency
        tbody
            tr(ng-repeat="food in foods", ng-click="editFood(food)").foodRow
                td {{food.title}}
                td {{food.description}}
                td {{food.priceString = getPrice(food)}}
                td {{food.currency}}
    button(ng-click="newFood()").btn-default.pull-right Add Food