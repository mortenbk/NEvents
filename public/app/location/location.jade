.container
    table.table.table-striped.table-hover
        thead
            th Title
            th Description
            th Is a room
        tbody
            tr(ng-repeat="location in locations", ng-click="editLocation(location)").locationRow
                td {{location.title}}
                td {{location.description}}
                td {{location.isRoom}}
    button(ng-click="newLocation()").btn-default.pull-right Add Location